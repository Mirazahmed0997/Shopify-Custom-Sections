<script>
document.addEventListener("DOMContentLoaded", function () {
  const slides = Array.from(document.querySelectorAll("#slider-{{ section.id }} .slide"));
  const dots = Array.from(document.querySelectorAll("#oracle-shop-{{ section.id }} .slider-dot"));
  if (slides.length === 0) return;

  let currentIndex = 0;
  let interval = null;

  function showSlide(index) {
    slides.forEach((slide, i) => slide.classList.toggle("active", i === index));
    dots.forEach((dot, i) => dot.classList.toggle("active", i === index));
    currentIndex = index;
  }

  function startInterval() {
    clearInterval(interval);
    interval = setInterval(() => {
      let nextIndex = (currentIndex + 1) % slides.length;
      showSlide(nextIndex);
    }, 3000); // 2s per slide
  }

  // Initialize
  showSlide(0);
  startInterval();

  // Pause on hover
  slides.forEach(slide => {
    slide.addEventListener("mouseenter", () => clearInterval(interval));
    slide.addEventListener("mouseleave", startInterval);
  });

  // Dot navigation
  dots.forEach((dot, i) => dot.addEventListener("click", () => {
    showSlide(i);
    startInterval();
  }));
});

// ========== Oracle Speech Cycle ==========
document.addEventListener("DOMContentLoaded", function () {
  const shopSection = document.querySelector("#oracle-shop-{{ section.id }}");
  const speechBox = shopSection.querySelector(".oracle-speech");
  const wisdomButton = shopSection.querySelector(".btn.wisdom");
  if (!speechBox || !wisdomButton) return;

  const speeches = [
    `{{ section.settings.speech | escape }}`,
    `{{ section.settings.speech2 | escape }}`,
    `{{ section.settings.speech3 | escape }}`,
    `{{ section.settings.speech4 | escape }}`
  ];

  let currentIndex = 0;
  speechBox.innerHTML = speeches[currentIndex];

  
  speechBox.addEventListener("click", () => {
    currentIndex = (currentIndex + 1) % speeches.length;
    speechBox.innerHTML = speeches[currentIndex];
  });

 
  wisdomButton.addEventListener("click", (e) => {
    e.preventDefault(); 
    currentIndex = (currentIndex + 1) % speeches.length;
    speechBox.innerHTML = speeches[currentIndex];
  });
});
</script>

